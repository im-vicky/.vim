" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc
syntax on
set incsearch
set visualbell
set noerrorbells
set highlightedyank
set relativenumber
set number
set ignorecase
set smartcase
set scrolloff=5 " 5 lines above/below cursor when scrolling
set showmode

" Emulated Plugins
set surround
set easymotion
set NERDTree
set commentary
set argtextobj
set ReplaceWithRegister
set textobj-entire
set multiple-cursors

" ShowIntentionActions

" Copy to system clipboard as well
set clipboard+=unnamed

" Use Idea to join lines smartly
set ideajoin

" let mapleader = ","
let mapleader = " "
" let maplocalleader = ","

" let g:EasyMotion_override_acejump = 0
nmap B %

nmap ;d <Action>(Debug)

nmap <leader>e <Action>(GotoNextError)
nmap <leader>E <Action>(GotoPreviousError)

nmap f <leader><leader>s
nmap <leader>f /
nmap ;f <Action>(ReformatCode)

nmap ;g <Action>(ShowIntentionActions)
nmap gb <Action>(Back)
nmap gf <Action>(Forward)

nmap <C-H> :action Back<cr>
nmap <leader>h <Action>(JumpToLastChange)
nmap H ^

nmap J 10j
imap jj <Esc>
nmap <leader>j <leader><leader>j
nmap ;j <Action>(NextSplitter)

nmap ;k <Action>(PrevSplitter)
nmap K 10k
nmap <leader>k <leader><leader>k
imap kk <Esc>

nmap <leader>l <Action>(JumpToNextChange)
nmap L $
nmap <C-L> :action Forward<cr>

nmap m <Action>(MethodDown)
nmap M <Action>(MethodUp)
nmap U <Action>($Redo)

nmap <leader>n :NERDTreeToggle<cr>

nmap <leader>q <Action>(CloseContent)
nmap <leader>Q <Action>(ReopenClosedTab)

nmap <leader>s <Action>(CodeCompletion)
nmap s <Action>(FindInPath)


nmap ( <Action>(PreviousTab)
nmap ) <Action>(NextTab)

nmap <leader>re <Action>(RenameElement)
nmap ;r <Action>(Run)

vmap ;f <Action>(ReformatCode)
vmap ;g <Action>(ShowIntentionActions)
vmap H ^
vmap J 10gj
vmap K 10gk
vmap L $
vmap R <Action>(Replace)

